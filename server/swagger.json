{
  "openapi": "3.0.0",
  "info": {
    "title": "Vambora API",
    "version": "1.0.0"
  },
  "paths": {
    "/user": {
      "post": {
        "summary": "Create a user",
        "tags": [
          "User"
        ],
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "enrollment": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "name",
                  "enrollment",
                  "password"
                ],
                "example": {
                  "email": "111111111@aluno.unb.br",
                  "name": "John Doe",
                  "enrollment": "111111111",
                  "password": "Ab123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "If the user already exists or the email is not from the UnB domain or the password is not strong enough or there is a missing fields"
          }
        }
      },
      "get": {
        "summary": "Read a user test",
        "tags": [
          "User"
        ],
        "description": "Read a user by id",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "enrollment": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "patch": {
        "summary": "Update a user",
        "tags": [
          "User"
        ],
        "description": "Update the user's name, email, enrollment or password",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "enrollment": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "111111222@aluno.unb.br",
                  "name": "John Doe",
                  "enrollment": "111111222",
                  "password": "Ab123@456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated"
          },
          "400": {
            "description": "If the user already exists or the email is not from the UnB domain or the password is not strong enough or there is a missing fields"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a user",
        "tags": [
          "User"
        ],
        "description": "Delete a user by id",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/user/verify": {
      "post": {
        "summary": "verify a user",
        "tags": [
          "User"
        ],
        "description": "verify a user using the token sent by email",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "verificationCode": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User verified"
          },
          "400": {
            "description": "If the verification code is wrong"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "login a user",
        "tags": [
          "User"
        ],
        "description": "login a existent user",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "enrollment": {
                          "type": "string"
                        },
                        "isVerified": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "If the email or password is wrong"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/routes": {
      "post": {
        "summary": "Create a route",
        "tags": [

                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Route created sucessfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "route": {
                      "type": "object",
                      "properties": {
                        "userId": {
                          "type": "string"
                        },
                        "originName": {
                          "type": "string"
                        },
                        "destinationName": {
                          "type": "string"
                        },
                        "distance": {
                          "type": "number"
                        },
                        "duration": {
                          "type": "number"
                        },
                        "origin": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "destination": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "originNeighborhood": {
                          "type": "string"
                        },
                        "originNeighborhoodSlug": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters"
          }
        }
      }
    },

